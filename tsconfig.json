{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "core-engine": ["packages/core-engine/src"],
      "core-reels": ["packages/core-reels/src"]
    }
  },
  "include": ["packages/**/*", "games/**/*"]
}
